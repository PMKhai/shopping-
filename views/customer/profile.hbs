<!-- <<<<<<<<<<<<<<<<<<<< My Profile Area Start >>>>>>>>>>>>>>>>>>>>>>>> -->
<div class="my_profile_area section_padding_100">
    <div class="container">
        <div class="row">

            <div class="col-12 col-md-3">
                <div class="profile-thumb" style="background-image: url(images/detailsquare.jpg);"></div>
                <form class="profile-thumb-upload mt-15">
                    <div class="form-group">
                        <input type="file" class="form-control-file" id="upload-new-thumb">
                    </div>
                </form>
            </div>

            <div class="col-12 col-md-6">
                <div class="ui-state-error" id="error-message"  ></div>
                <div class="profile_form">
                    <form action="#" method="POST" class="text-left">
                        <div class="row">
                            <div class="col-12 col-md">

                                <div class="form-group">
                                    <label for="first_name">Họ và tên</label>
                                    <input type="text"  class="form-control" id="name" name="name" value="{{user.name}}">
                                </div>
                            </div>

                        </div>
                        <div class="form-group">
                            <label for="p_number">Số điện thoại</label>
                            <input type="text" class="form-control" id="p_number" name="p_number"  value="{{user.p_number}}">
                        </div>
                        <div class="form-group">
                            <label for="p_number">Địa chỉ</label>
                            <input type="text" class="form-control" id="address" name="address" value="{{user.address}}">
                        </div>
                        <div class="form-group">

                            <input class="form-control" id="user_name" name="user_name" value="{{user.user_name}}" hidden="true" >
                        </div>
                        <div class="form-group">
                            <label for="email">Email</label>
                            <input type="email" class="form-control" id="email" name="email" value="{{user.email}}">
                        </div>

                        <div class="form-group">
                            <label for="create_password">Xác minh mật khẩu cũ</label>
                            <input type="password" id="confirm_password" name="confirm_password" class="form-control" aria-describedby="passwordHelpBlock">
                            <small id="passwordHelpBlock" class="form-text text-muted">Nếu bạn không muốn tạo password, vui lòng để khoảng trắng</small>
                        </div>
                        <div class="form-group">
                            <label for="confirm_password">Tạo mật khẩu mới</label>
                            <input type="password" id="update_password" name="update_password" class="form-control">
                            <small id="passwordHelpBlock" class="form-text text-muted">Nếu bạn không muốn tạo password, vui lòng để khoảng trắng</small>
                        </div>

                        <button href="/profile" id="btn-update" type="submit" class="btn bigshop-btn w-100">CẬP NHẬT THÔNG TIN</button>
                    </form>
                </div>
            </div>


        </div>
    </div>
</div>
{{#extend "profile-script"}}
    <script>
        $('#error-message').hide();
        $('#confirm_password').keyup(function() {
            $.getJSON('/api/user/checkValidPassword?user_name='+$('#user_name').val()+'&password='+$('#confirm_password').val(), function (data){
                if (!data && $('#confirm_password').val().length > 0) {
                    $('#error-message').show();
                    $('#error-message').html('Xác nhận mật khẩu không khớp! Vui lòng nhập lại');
                    $("#btn-update").attr("disabled", true);
                }
                else {

                    $('#error-message').hide();
                    $("#btn-update").attr("disabled", false);

                }

            })
        });
    </script>
{{/extend}}
<!-- <<<<<<<<<<<<<<<<<<<< My Profile Area End >>>>>>>>>>>>>>>>>>>>>>>> -->