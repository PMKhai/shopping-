<!-- <<<<<<<<<<<<<<<<<<<< My Profile Area Start >>>>>>>>>>>>>>>>>>>>>>>> -->
<div id="heading-breadcrumbs">
    <div class="container">
        <div class="row">
            <div class="col-md-7">
                <h1>{{title}}</h1>
            </div>
            <div class="col-md-5">
                <ul class="breadcrumb">

                    <li><a href="/">Trang Chủ</a>
                    </li>
                    <li>{{title}}</li>
                </ul>

            </div>
        </div>
    </div>
</div>
<div class="my_profile_area section_padding_0_100">

    <div class="container">
        <div class="row">

            <div class="col-12 col-md-3">
                <div class="profile-thumb" style="background-image: url(images/detailsquare.jpg);"></div>
                <form class="profile-thumb-upload mt-15">
                    <div class="form-group">
                        <input type="file" class="form-control-file" id="upload-new-thumb">
                    </div>
                </form>
            </div>

            <div class="col-12 col-md-6">


                <form action="#" method="POST" class="text-left">

                    <div class="form-group">
                        <label for="first_name">Họ và tên</label>
                        <input type="text" class="form-control" id="name" name="name" value="{{user.name}}">
                    </div>

                    <div class="form-group">
                        <label for="p_number">Ngày tháng năm sinh</label>
                        <input type="date" class="form-control" id="dob" name="dob" value="{{user.dob}}">
                    </div>
                    <div class="form-group">
                        <label for="p_number">Số điện thoại</label>
                        <input type="text" class="form-control" id="p_number" name="p_number" value="{{user.p_number}}">
                    </div>
                    <div class="form-group">
                        <label for="p_number">Địa chỉ</label>
                        <input type="text" class="form-control" id="address" name="address" value="{{user.address}}">
                    </div>
                    <div class="form-group">

                        <input class="form-control" id="user_name" name="user_name" value="{{user.user_name}}"
                            hidden="true">
                    </div>
                    <div class="form-group">
                        <label for="email">Email</label>
                        <input type="email" class="form-control" id="email" name="email" value="{{user.email}}">
                    </div>



                    <button href="/profile" id="btn-update" type="submit" class="btn bigshop-btn w-100">CẬP NHẬT THÔNG
                        TIN</button>
                </form>
            </div>


        </div>
    </div>
</div>
<!-- <<<<<<<<<<<<<<<<<<<< My Profile Area End >>>>>>>>>>>>>>>>>>>>>>>> -->