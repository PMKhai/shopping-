<body>


<div id="all">


    <!-- *** LOGIN MODAL ***
_________________________________________________________ -->



    <!-- *** LOGIN MODAL END *** -->

    <div id="heading-breadcrumbs">
        <div class="container">
            <div class="row">
                <div class="col-md-7">
                    <h1>Giỏ Đồ</h1>
                </div>
                <div class="col-md-5">
                    <ul class="breadcrumb">

                        <li><a href="/">Trang Chủ</a>
                        </li>
                        <li>Giỏ Đồ</li>
                    </ul>

                </div>
            </div>
        </div>
    </div>


    <!-- ***** Cart Area Start ***** -->
    <div class="cart_area section_padding_100 clearfix">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="cart-table clearfix">
                        <table class="table table-responsive">
                            <thead>
                            <tr>
                                <th><i class="fa fa-trash-o" aria-hidden="true"></i></th>
                                <th>Hình ảnh</th>
                                <th>Sản phẩm</th>
                                <th>Giá</th>
                                <th>Số lượng</th>
                                <th>Tổng</th>
                            </tr>
                            </thead>
                            <tbody>
                                {{#each listInCart}}
                                    <tr>
                                        <td class="action"><a href="#"><i class="fa fa-times" aria-hidden="true"></i></a></td>
                                        <td class="cart_product_img">
                                            <a href="#"><img src="{{this.image}}" alt="Product"></a>
                                        </td>
                                        <td class="cart_product_desc">
                                            <h5>{{this.name}}</h5>
                                        </td>
                                        <td class="price"><span>{{this.price}}</span></td>
                                        <td class="qty">
                                            <div class="quantity">
                                                <span class="qty-minus" onclick="var effect = document.getElementById('qty'); var qty = effect.value; if( !isNaN( qty ) &amp;&amp; qty &gt; 1 ) effect.value--;return false;"><i class="fa fa-minus" aria-hidden="true"></i></span>
                                                <input type="number" class="qty-text" id="qty" step="1" min="1" max="99" name="quantity" value="{{this.quantum}}">
                                                <span class="qty-plus" onclick="var effect = document.getElementById('qty'); var qty = effect.value; if( !isNaN( qty )) effect.value++;return false;"><i class="fa fa-plus" aria-hidden="true"></i></span>
                                            </div>
                                        </td>

                                        <script type="text/javascript">
										var number = {{this.price}}*{{this.quantum}};
									    </script>

                                        <td class="total_price">
                                            <span>		
                                                <script type="text/javascript">
                                                    document.write(number)
                                                </script>									
                                            </span>
                                        </td>
                                    </tr>
                                {{/each}}
                            </tbody>
                            <tfoot>
                            <tr>
                                <td>Tổng</td>
                                <td>$446.00</td>
                            </tr>
                            <tr>
                                <td><strong>Tổng tiền</strong></td>
                                <td><strong>$446.00</strong></td>
                            </tr>
                            </tfoot>
                        </table>
                    </div>

                    <div class="cart-footer d-flex mt-30">
                        <div class="back-to-shop w-50">
                            <a href="/" class="btn bigshop-btn"><i class="fa fa-undo" aria-hidden="true"></i> Quay lại cửa hàng</a>
                        </div>
                        <div class="update-checkout w-50 text-right">
                            <a href="#" class="btn bigshop-btn">Cập nhật giỏ đồ</a>
                            <a href="checkout" class="btn bigshop-btn">Thanh toán</a>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
    <!-- ***** Cart Area End ***** -->

<!-- /#all -->

</div>


</body>